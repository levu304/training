{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      ":/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
